<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Time"
        android:textColor="@android:color/black"/>
    <TextView


        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/totaltime"
        android:textColor="@android:color/holo_blue_bright"
        android:text="00 hrs, 09 min, 43 sec"/>



    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/starttime"
        android:textColor="@android:color/black"
        android:text="STARTTIME: 00 hrs, 09 min, 43 sec"/>



    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/endtime"
        android:textColor="@android:color/black"
        android:text="STOPTIME: 00 hrs, 09 min, 43 sec"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number of Points tracked:"
        android:textColor="@android:color/black"/>

    <TextView
        android:textSize="20sp"

        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nopoints"
        android:textColor="@android:color/holo_blue_bright"
        android:text=" 45"/>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number of Unique Points tracked:"
        android:textColor="@android:color/black"/>

    <TextView

        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uniquenopoints"
        android:text="4"/>



    <TextView
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List of All Points"/>

    <CheckBox
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbunique"
        android:text="View Only Unique Points"/>




    <TextView
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contentallpts"/>



</LinearLayout>
